<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_page"
    android:orientation="vertical"
    tools:context=".FragAnimViewDemo">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/page8_btn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_round_3t"
        android:padding="20dp"
        android:text="Animate View"
        android:textColor="@color/text_on_bg"
        android:textSize="20sp" />


    <utils.ArcView
        android:background="@drawable/bg_round_3t"
        android:layout_below="@+id/page8_btn_title"
        android:id="@+id/page8_anim_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/page8_animBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:text="Animate"
        android:textSize="16sp"/>
</RelativeLayout>